@model MicroSocialPlatform.Models.Post
@using Microsoft.AspNetCore.Identity
@using MicroSocialPlatform.Models
@inject UserManager<ApplicationUser> UserManager

@{
    ViewData["Title"] = "Postare";
    var currentUser = await UserManager.GetUserAsync(User);
    var hasLiked = ViewBag.HasLiked as bool? ?? false;
}

<div class="container mt-4 mb-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm rounded-4">
                <!-- header postare -->
                <div class="card-header bg-white border-0 pb-0 pt-3 px-4">
                    <div class="d-flex align-items-center gap-3">
                        <a asp-controller="Profile" asp-action="Index" asp-route-username="@(Model.User?.CustomUsername ?? Model.User?.UserName)" 
                           class="text-decoration-none">
                            @if (!string.IsNullOrEmpty(Model.User?.ProfilePicture))
                            {
                                <img src="@Model.User.ProfilePicture"
                                     alt="@(Model.User.UserName)"
                                     class="rounded-circle border"
                                     style="width: 40px; height: 40px; object-fit: cover;">
                            }
                            else
                            {
                                <div class="user-avatar">
                                    @{
                                        var userInitials = Model.User?.UserName?.Substring(0, 2).ToUpper() ?? "AN";
                                    }
                                    <span>@userInitials</span>
                                </div>
                            }
                        </a>
                        <div class="flex-grow-1">
                            <a asp-controller="Profile" asp-action="Index" asp-route-username="@(Model.User?.CustomUsername ?? Model.User?.UserName)" 
                               class="text-decoration-none text-dark">
                                <h6 class="mb-0 fw-bold">@(Model.User?.FullName ?? Model.User?.UserName ?? "Anonim")</h6>
                            </a>
                            <small class="text-muted">
                                @Model.CreatedAt.ToLocalTime().ToString("dd MMMM yyyy, HH:mm")
                                @if (Model.UpdatedAt != null && Model.UpdatedAt != Model.CreatedAt)
                                {
                                    <span class="fst-italic ms-1" title="Editat la @Model.UpdatedAt.Value.ToLocalTime().ToString("g")">
                                        (editat)
                                    </span>
                                }
                            </small>
                        </div>

                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <div class="dropdown">
                                <button class="btn btn-link text-muted" type="button" data-bs-toggle="dropdown">
                                    <i class="bi bi-three-dots fs-5"></i>
                                </button>
                                <ul class="dropdown-menu dropdown-menu-end shadow border-0">
                                    @{
                                        var isOwner = currentUser != null && Model.UserId == currentUser.Id;
                                        var isAdmin = User.IsInRole("Administrator");
                                    }

                                    @if (isOwner || isAdmin)
                                    {
                                        @if (isOwner)
                                        {
                                            <li>
                                                <a asp-controller="Post" asp-action="Edit" asp-route-id="@Model.Id" class="dropdown-item">
                                                    <i class="bi bi-pencil-square me-2"></i> Editează Postarea
                                                </a>
                                            </li>
                                        }

                                        <li>
                                            <form asp-controller="Post" asp-action="Delete" asp-route-id="@Model.Id" method="post" class="d-inline">
                                                <button type="submit" class="dropdown-item text-danger" onclick="return confirm('Ești sigur că vrei să ștergi această postare?');">
                                                    <i class="bi bi-trash3-fill me-2"></i> Șterge Postarea
                                                </button>
                                            </form>
                                        </li>
                                    }
                                    else
                                    {
                                        <li><a class="dropdown-item" href="#"><i class="bi bi-bookmark me-2"></i> Salvează</a></li>
                                        <li><a class="dropdown-item" href="#"><i class="bi bi-flag me-2"></i> Raportează</a></li>
                                    }
                                </ul>
                            </div>
                        }
                    </div>
                </div>

                <!-- media -->
                @if (Model.PostMedias != null && Model.PostMedias.Any())
                {
                    <div class="mb-4">
                        @foreach (var media in Model.PostMedias)
                        {
                            <div class="card border-0 shadow-sm rounded-4 mb-3 overflow-hidden"> 
                                @if (media.MediaType == MediaType.Image)
                                {
                                    <img src="@media.Url" alt="Post Image" class="img-fluid w-100" style="max-height: 600px; object-fit:contain; background-color: #f8f9fa;">
                                }
                                else if (media.MediaType == MediaType.Video)
                                {
                                    <div class="ratio ratio-16x9 bg-light">
                                        <video controls class="rounded-top rounded-bottom" style="max-height: 600px;">
                                            <source src="@media.Url" type="video/mp4">
                                            Browserul tau nu suporta elementul video.
                                        </video>
                                    </div>
                                }
                            </div>
                        }
                    </div>
                }

                <!-- content si actiuni -->
                <div class="card-body px-4">
                    <!-- actiuni (Like, Comment) -->
                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        <div class="post-actions d-flex gap-3 mb-3 pb-2 border-bottom">
                            <partial name="_LikePartial" model="Model" />

                            <a asp-controller="Post" asp-action="Details" asp-route-id="@Model.Id" class="btn btn-link text-muted p-0" style="text-decoration: none;">
                                <i class="bi bi-chat fs-5"></i>
                            </a>
                            <button class="btn btn-link text-muted p-0" style="text-decoration: none;">
                                <i class="bi bi-share fs-5"></i>
                            </button>
                        </div>
                    }

                    <!-- like count -->
                    <div class="mb-2">
                        <strong>@Model.LikesCount @(Model.LikesCount == 1 ? "like" : "like-uri")</strong>
                    </div>

                    <!-- content -->
                    <div class="mb-3">
                        <a asp-controller="Profile" asp-action="Index" asp-route-username="@(Model.User?.CustomUsername ?? Model.User?.UserName)" 
                           class="text-decoration-none text-dark fw-bold me-2">
                            @(Model.User?.CustomUsername ?? Model.User?.UserName)
                        </a>
                        <span>@Model.Content</span>
                    </div>

                    <!-- comments count -->
                    @if (Model.CommentsCount > 0)
                    {
                        <a asp-controller="Post" asp-action="Details" asp-route-id="@Model.Id" class="text-decoration-none text-muted mb-3 d-block">
                            Vezi toate cele @Model.CommentsCount @(Model.CommentsCount == 1 ? "comentariu" : "comentarii")
                        </a>
                    }

                    <!-- comments section -->
                    <div class="comments-section mt-3" id="comments-container-@Model.Id">
                        @if (Model.Comments != null && Model.Comments.Any())
                        {
                            @foreach (var comment in Model.Comments.OrderBy(c => c.CreatedAt))
                            {
                                <div class="d-flex gap-2 mb-3 comment-item" data-comment-id="@comment.Id">
                                    <a asp-controller="Profile" asp-action="Index" asp-route-username="@(comment.User?.CustomUsername ?? comment.User?.UserName)" 
                                       class="text-decoration-none">
                                        @if (!string.IsNullOrEmpty(comment.User?.ProfilePicture))
                                        {
                                            <img src="@comment.User.ProfilePicture"
                                                 alt="@comment.User.UserName" 
                                                 class="rounded-circle border" 
                                                 style="width: 32px; height: 32px; object-fit: cover;">
                                        }
                                        else
                                        {
                                            <div class="user-avatar" style="width:32px; height:32px; font-size: 0.8rem;">
                                                @{
                                                    var commentUserInitials = comment.User?.UserName?.Substring(0, 2).ToUpper() ?? "AN";
                                                }
                                                <span>@commentUserInitials</span>
                                            </div>    
                                        }
                                    </a>
                                    <div class="flex-grow-1">
                                        <div class="d-flex align-items-center gap-2 mb-1">
                                            <a asp-controller="Profile" asp-action="Index" asp-route-username="@(comment.User?.CustomUsername ?? comment.User?.UserName)" 
                                               class="text-decoration-none text-dark fw-bold">
                                                @(comment.User?.CustomUsername ?? comment.User?.UserName)
                                            </a>
                                            <span class="text-dark comment-content" data-comment-id="@comment.Id">@comment.Content</span>
                                        </div>
                                        <div class="d-flex align-items-center gap-2">
                                            <small class="text-muted">
                                                @comment.CreatedAt.ToLocalTime().ToString("dd MMM HH:mm")
                                                @if (comment.UpdatedAt != null && comment.UpdatedAt != comment.CreatedAt)
                                                {
                                                    <span class="fst-italic ms-1" title="Editat la @comment.UpdatedAt.Value.ToLocalTime().ToString("g")">
                                                        (editat)
                                                    </span>
                                                }
                                            </small>
                                            @if (User.Identity?.IsAuthenticated == true)
                                            {
                                                var isCommentOwner = currentUser != null && comment.UserId == currentUser.Id;
                                                var isPostOwner = currentUser != null && Model.UserId == currentUser.Id;
                                                var isAdmin = User.IsInRole("Administrator");
                                                
                                                // doar autorul comentariului poate edita comentariul
                                                @if (isCommentOwner)
                                                {
                                                    <button class="btn btn-link text-primary p-0 edit-comment-btn" 
                                                            data-comment-id="@comment.Id"
                                                            data-comment-content="@comment.Content"
                                                            style="text-decoration: none; font-size: 0.85rem;"
                                                            title="Editează comentariul">
                                                        <i class="bi bi-pencil"></i>
                                                    </button>
                                                }
                                                
                                                // autorul postarii poate sterge orice comentariu, mai putin daca acesta apartine adminului platformei
                                                @if (isCommentOwner || isAdmin || (isPostOwner && !(comment.User != null && UserManager.IsInRoleAsync(comment.User, "Administrator").Result)))
                                                {
                                                    <button class="btn btn-link text-danger p-0 delete-comment-btn" 
                                                            data-comment-id="@comment.Id" 
                                                            style="text-decoration: none; font-size: 0.85rem;"
                                                            title="Șterge comentariul">
                                                        <i class="bi bi-trash"></i>
                                                    </button>
                                                }
                                            }
                                        </div>
                                    </div>
                                </div>
                            }
                        }
                        else
                        {
                            <p class="text-muted small mb-0">Nu există comentarii. Fii primul care comentează!</p>
                        }
                    </div>

                    <!-- add comment form -->
                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        <form class="mt-3 pt-3 border-top comment-form" data-post-id="@Model.Id">
                            @Html.AntiForgeryToken()
                            <div class="input-group">
                                <input type="text" 
                                       class="form-control border-0 bg-light rounded-pill ps-3" 
                                       placeholder="Adaugă un comentariu..." 
                                       id="comment-input-@Model.Id"
                                       maxlength="500"
                                       required>
                                <button class="btn btn-link text-primary px-3" type="submit" style="text-decoration: none;">
                                    Postează
                                </button>
                            </div>
                            <small class="text-muted ms-3" id="char-count-@Model.Id">0/500</small>
                        </form>
                    }
                    else
                    {
                        <!-- mesaj pentru utilizatori neinregistrati -->
                        <div class="alert alert-info mt-3 rounded-pill border-0" style="background: rgba(142, 68, 173, 0.1);">
                            <div class="d-flex align-items-center gap-2">
                                <i class="bi bi-info-circle"></i>
                                <span class="small">
                                    Pentru a adăuga comentarii, <a asp-area="Identity" asp-page="/Account/Register" class="text-decoration-none fw-bold">creează un cont</a> sau 
                                    <a asp-area="Identity" asp-page="/Account/Login" class="text-decoration-none fw-bold">autentifică-te</a>.
                                </span>
                            </div>
                        </div>
                    }
                </div>
            </div>

            <!-- Back button -->
            <div class="mt-3">
                <a href="javascript:history.back()" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left me-2"></i>Înapoi
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const postId = @Model.Id;
            const commentInput = document.getElementById('comment-input-' + postId);
            const commentForm = document.querySelector('.comment-form[data-post-id="' + postId + '"]');
            const commentsContainer = document.getElementById('comments-container-@Model.Id');
            const charCount = document.getElementById('char-count-' + postId);

            // counter caractere
            if (commentInput && charCount) {
                commentInput.addEventListener('input', function() {
                    charCount.textContent = this.value.length + '/500';
                });
            }

            // adaugare comentariu
            if (commentForm) {
                commentForm.addEventListener('submit', async function(e) {
                    e.preventDefault();

                    const content = commentInput.value.trim();
                    if (!content) { alert('Comentariul nu poate fi gol!'); return; }

                    // token CSRF pentru securitate
                    const tokenInput = document.querySelector('input[name="__RequestVerificationToken"]');
                    const token = tokenInput ? tokenInput.value : '';

                    try {
                        const response = await fetch('@Url.Action("Create", "Comment")', {
                            method: 'POST',
                            headers: {
                                'Content-Type': 'application/x-www-form-urlencoded',
                                'RequestVerificationToken': token
                            },
                            body: new URLSearchParams({
                                postId: postId,
                                content: content,
                                __RequestVerificationToken: token
                            })
                        });

                        const result = await response.json();

                        if (result.success) {
                        // resetam formularul
                        commentInput.value = '';
                        if (charCount) charCount.textContent = '0/500';

                        // formatam data
                        const d = new Date(result.comment.createdAt);
                        const dateStr = d.toLocaleDateString('ro-RO', { day: '2-digit', month: 'short' }) + ' ' +
                                      d.toLocaleTimeString('ro-RO', { hour: '2-digit', minute: '2-digit' });

                        let avatarHtml = '';
                        if (result.comment.user.profilePicture) {
                            // daca serverul a trimis o poza, construim tag-ul img
                            avatarHtml = `
                                <img src="${result.comment.user.profilePicture}"
                                     class="rounded-circle border"
                                     style="width: 32px; height: 32px; object-fit: cover;"
                                     alt="${result.comment.user.userName}">`;
                        } else {
                            // daca nu, construim div-ul cu initialele userului
                            const initials = result.comment.user.userName.substring(0, 2).toUpperCase();
                            avatarHtml = `
                                <div class="user-avatar" style="width: 32px; height: 32px; font-size: 0.8rem;">
                                    <span>${initials}</span>
                                </div>`;
                        }

                        const html = `
                            <div class="d-flex gap-2 mb-3 comment-item" data-comment-id="${result.comment.id}">
                                <a href="/Profile?username=${encodeURIComponent(result.comment.user.customUsername)}" class="text-decoration-none">
                                    ${avatarHtml}  </a>
                                <div class="flex-grow-1">
                                    <div class="d-flex align-items-center gap-2 mb-1">
                                        <a href="/Profile?username=${encodeURIComponent(result.comment.user.customUsername)}" class="text-decoration-none text-dark fw-bold">
                                            ${result.comment.user.customUsername}
                                        </a>
                                        <span class="text-dark comment-content" data-comment-id="${result.comment.id}">${escapeHtml(result.comment.content)}</span>
                                    </div>
                                    <div class="d-flex align-items-center gap-2">
                                        <small class="text-muted date-container">${dateStr}</small>

                                        <button class="btn btn-link text-primary p-0 edit-comment-btn"
                                                data-comment-id="${result.comment.id}"
                                                title="Editează">
                                            <i class="bi bi-pencil"></i>
                                        </button>
                                        <button class="btn btn-link text-danger p-0 delete-comment-btn"
                                                data-comment-id="${result.comment.id}"
                                                title="Șterge">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </div>
                                </div>
                            </div>`;

                        // scoatem mesajul "nu exista comentarii"
                        const noComm = commentsContainer.querySelector('p.text-muted');
                        if (noComm) noComm.remove();

                        // adaugam la final
                        commentsContainer.insertAdjacentHTML('beforeend', html);

                        updateCount(result.commentsCount);
                        attachHandlers();
                    }
                    } catch (err) {
                        console.error(err);
                        alert('Eroare de comunicare cu serverul.');
                    }
                });
            }

            // functii pentru editare si stergere
            function attachHandlers() {
                // editare - abordare non-distructiva (Toggle)
                document.querySelectorAll('.edit-comment-btn:not(.bound)').forEach(btn => {
                    btn.classList.add('bound'); // marcare ca atasat
                    btn.addEventListener('click', function() {
                        const id = this.dataset.commentId;
                        const span = document.querySelector(`.comment-content[data-comment-id="${id}"]`);
                        if (!span) return;

                        const currentText = span.innerText;

                        // creare input editare
                        const input = document.createElement('input');
                        input.type = 'text';
                        input.className = 'form-control form-control-sm d-inline-block ms-2';
                        input.style.width = 'auto';
                        input.style.minWidth = '200px';
                        input.value = currentText;

                        const btnGroup = document.createElement('span');
                        btnGroup.className = 'ms-2';
                        btnGroup.innerHTML = `
                            <button class="btn btn-sm text-white save-btn shadow-sm" style="background: linear-gradient(135deg, #a18cd1, #fbc2eb); border: none;" title="Salvează">
                                <i class="bi bi-check"></i>
                            </button>
                            <button class="btn btn-sm btn-light cancel-btn ms-1 shadow-sm" style="color: #6c757d;" title="Anulează">
                                <i class="bi bi-x"></i>
                            </button>
                        `;

                        // ascundem textul, aratam inputul
                        span.style.display = 'none';
                        span.parentNode.insertBefore(input, span.nextSibling);
                        input.parentNode.insertBefore(btnGroup, input.nextSibling);
                        input.focus();

                        // cancel
                        const cleanup = () => {
                            input.remove();
                            btnGroup.remove();
                            span.style.display = 'inline';
                        };

                        // save
                        const save = async () => {
                            const newTxt = input.value.trim();
                            if (!newTxt) { alert('Nu poate fi gol!'); return; }

                            const token = document.querySelector('input[name="__RequestVerificationToken"]').value;

                            try {
                                const resp = await fetch('@Url.Action("Edit", "Comment")', {
                                    method: 'POST',
                                    headers: { 'Content-Type': 'application/x-www-form-urlencoded', 'RequestVerificationToken': token },
                                    body: new URLSearchParams({ id: id, content: newTxt, __RequestVerificationToken: token })
                                });
                                const res = await resp.json();

                                if (res.success) {
                                    span.textContent = res.comment.content;
                                    const dateBox = span.closest('.flex-grow-1').querySelector('.date-container');
                                    if (dateBox && !dateBox.innerHTML.includes('(editat)')) {
                                        dateBox.innerHTML += ' <span class="fst-italic text-muted ms-1">(editat)</span>';
                                    }
                                    cleanup();
                                } else {
                                    alert(res.message);
                                }
                            } catch (e) { console.error(e); alert('Eroare la editare.'); }
                        };

                        btnGroup.querySelector('.save-btn').addEventListener('click', save);
                        btnGroup.querySelector('.cancel-btn').addEventListener('click', cleanup);
                    });
                });

                // stergere
                document.querySelectorAll('.delete-comment-btn:not(.bound)').forEach(btn => {
                    btn.classList.add('bound');
                    btn.addEventListener('click', async function() {
                        if (!confirm('Ștergi acest comentariu?')) return;
                        const id = this.dataset.commentId;
                        const token = document.querySelector('input[name="__RequestVerificationToken"]').value;

                        try {
                            const resp = await fetch('@Url.Action("Delete", "Comment")', {
                                method: 'POST',
                                headers: { 'Content-Type': 'application/x-www-form-urlencoded', 'RequestVerificationToken': token },
                                body: new URLSearchParams({ id: id, __RequestVerificationToken: token })
                            });
                            const res = await resp.json();
                            if (res.success) {
                                const item = document.querySelector(`.comment-item[data-comment-id="${id}"]`);
                                if (item) item.remove();
                                updateCount(res.commentsCount);
                            } else {
                                alert(res.message);
                            }
                        } catch (e) { console.error(e); alert('Eroare la ștergere.'); }
                    });
                });
            }

            // helper pentru actualizare numar comentarii
            function updateCount(count) {
                const link = document.querySelector('a[href*="Details"]');
                if (!link) return;

                if (count > 0) {
                    link.textContent = `Vezi toate cele ${count} ${count === 1 ? 'comentariu' : 'comentarii'}`;
                    link.style.display = 'block';
                } else {
                    link.style.display = 'none';
                }
            }

            // helper xss protection
            function escapeHtml(text) {
                if (!text) return text;
                return text
                    .replace(/&/g, "&amp;")
                    .replace(/</g, "&lt;")
                    .replace(/>/g, "&gt;")
                    .replace(/"/g, "&quot;")
                    .replace(/'/g, "&#039;");
            }

            attachHandlers();
        });
    </script>
}

<style>
