@model MicroSocialPlatform.Models.ViewModels.EditPostViewModel

@{
    ViewData["Title"] = "Editează Postarea";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <h4 class="mb-4 fw-bold" style="color: #6c5ce7;">Editează postarea</h4>

        <div class="card border-0 shadow-sm rounded-4 p-4">
            <div class="card-body">
                <form asp-action="Edit" method="post" enctype="multipart/form-data">
                    <input type="hidden" asp-for="Id" />
                    <div asp-validation-summary="All" class="text-danger mb-3"></div>

                    <div class="mb-4">
                        <label asp-for="Content" class="form-label fw-bold text-muted small">Textul postării</label>
                        <textarea asp-for="Content" class="form-control border-0 bg-light rounded-3 p-3" rows="5"></textarea>
                        <span asp-validation-for="Content" class="text-danger small"></span>
                    </div>

                    @if (Model.ExistingMedia != null && Model.ExistingMedia.Any())
                    {
                        <h6 class="text-muted small fw-bold mb-3">Fișiere existente (Bifează pentru a șterge):</h6>
                        <div class="row g-3 mb-4">
                            @foreach (var media in Model.ExistingMedia)
                            {
                                <div class="col-4 col-md-3 text-center">
                                    <div class="position-relative border rounded overflow-hidden mb-1" style="height: 100px;">
                                        @if (media.MediaType == MicroSocialPlatform.Models.MediaType.Image)
                                        {
                                            <img src="@media.Url" class="w-100 h-100" style="object-fit: cover;" />
                                        }
                                        else
                                        {
                                            <div class="w-100 h-100 bg-dark d-flex align-items-center justify-content-center text-white">
                                                <i class="bi bi-play-circle fs-3"></i>
                                            </div>
                                        }
                                    </div>
                                    <div class="form-check d-flex justify-content-center gap-2">
                                        <input class="form-check-input border-danger" type="checkbox" name="MediaIdsToDelete" value="@media.Id" id="del_@media.Id">
                                        <label class="form-check-label text-danger small fw-bold" for="del_@media.Id">Șterge</label>
                                    </div>
                                </div>
                            }
                        </div>
                    }

                    <hr class="text-muted my-4" />
                    <h6 class="text-muted small fw-bold mb-3">Adaugă fișiere noi (Opțional):</h6>

                    <div class="row g-3 mb-4">
                        <div class="col-md-6">
                            <div class="p-3 border rounded-3 text-center bg-light">
                                <i class="bi bi-image fs-4 text-success d-block"></i>
                                <span class="text-muted small">Adaugă Foto</span>
                                <input asp-for="NewImages" type="file" class="form-control mt-2" accept="image/*" multiple />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="p-3 border rounded-3 text-center bg-light">
                                <i class="bi bi-camera-reels fs-4 text-danger d-block"></i>
                                <span class="text-muted small">Adaugă Video</span>
                                <input asp-for="NewVideos" type="file" class="form-control mt-2" accept="video/*" multiple />
                            </div>
                        </div>
                    </div>

                    <div class="d-flex justify-content-between mt-4">
                        <a asp-controller="Home" asp-action="Index" class="btn btn-light rounded-pill px-4 fw-bold">Anulează</a>
                        <button type="submit" class="btn text-white rounded-pill px-5 fw-bold" style="background: #6c5ce7;">Salvează Modificările</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>