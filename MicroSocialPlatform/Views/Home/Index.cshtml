@model IEnumerable<MicroSocialPlatform.Models.Post>
@using MicroSocialPlatform.Models;
@using Microsoft.AspNetCore.Identity;
@inject UserManager<ApplicationUser> UserManager;

@Html.AntiForgeryToken()
@{
    ViewData["Title"] = "Acasă";
    var currentUser = await UserManager.GetUserAsync(User);
}

<div class="home-page">
    @if (!User.Identity.IsAuthenticated)
    {
        <div class="hero-section card mb-4">
            <div class="card-body text-center py-5">
                <h1 class="display-4 mb-3">
                    <i class="bi bi-chat-dots-fill text-primary"></i>
                    Bine ai venit pe Agora
                </h1>
                <p class="lead text-muted mb-4">
                    Platforma unde împărtășești idei, te conectezi cu oameni și construiești comunități.
                </p>
                <div class="d-flex gap-3 justify-content-center">
                    <a asp-controller="Account" asp-action="Register" class="btn btn-primary btn-lg">
                        <i class="bi bi-person-plus"></i> Înregistrează-te
                    </a>
                    <a asp-controller="Account" asp-action="Login" class="btn btn-outline-primary btn-lg">
                        <i class="bi bi-box-arrow-in-right"></i> Autentifică-te
                    </a>
                </div>
            </div>
        </div>

        <div class="features-grid mb-5">
            <div class="row g-4">
                <div class="col-md-4">
                    <div class="card h-100">
                        <div class="card-body text-center">
                            <div class="feature-icon mb-3"><i class="bi bi-people-fill"></i></div>
                            <h5 class="card-title">Creează Grupuri</h5>
                            <p class="card-text text-muted">Găsește oameni cu aceleași interese.</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card h-100">
                        <div class="card-body text-center">
                            <div class="feature-icon mb-3"><i class="bi bi-image-fill"></i></div>
                            <h5 class="card-title">Împărtășește Postări</h5>
                            <p class="card-text text-muted">Postează text, imagini și video.</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card h-100">
                        <div class="card-body text-center">
                            <div class="feature-icon mb-3"><i class="bi bi-bell-fill"></i></div>
                            <h5 class="card-title">Fii la Curent</h5>
                            <p class="card-text text-muted">Urmărește activitatea prietenilor tăi.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- postari publice pentru vizitatori -->
        <div class="public-posts-section">
            <h5 class="mb-3 fw-bold" style="color: #2c3e50;">
                <i class="bi bi-globe me-2"></i> Postări Publice
            </h5>

            @if (Model != null && Model.Any())
            {
                @foreach (var post in Model)
                {
                    <partial name="_PostCard" model="post" />
                }

                <div class="text-center mt-4 mb-5">
                    <p class="text-muted">
                        <i class="bi bi-info-circle me-1"></i>
                        Pentru a vedea mai multe postări și a interacționa cu comunitatea, 
                        <a asp-controller="Account" asp-action="Register">înregistrează-te</a> sau 
                        <a asp-controller="Account" asp-action="Login">autentifică-te</a>.
                    </p>
                </div>
            }
            else
            {
                <div class="text-center py-4 rounded-4 bg-white shadow-sm border">
                    <div class="mb-2">
                        <div class="d-inline-flex align-items-center justify-content-center rounded-circle"
                             style="width: 50px; height: 50px; background: linear-gradient(135deg, rgba(161, 140, 209, 0.2), rgba(251, 194, 235, 0.2)); color: #8e44ad;">
                            <i class="bi bi-inbox fs-4"></i>
                        </div>
                    </div>
                    <h6 class="fw-bold text-dark mb-1">Nu există postări publice momentan</h6>
                    <p class="text-muted small mb-3">
                        Fii primul care postează ceva interesant!
                    </p>
                    <a asp-controller="Account" asp-action="Register" class="btn btn-sm text-white rounded-pill px-4 shadow-sm fw-bold"
                       style="background: linear-gradient(90deg, #a18cd1 0%, #fbc2eb 100%); border: none;">
                        <i class="bi bi-person-plus me-1"></i> Înregistrează-te pentru a posta
                    </a>
                </div>
            }
        </div>
    }
    else
    {
        <div class="feed-section">

            @{
                /*@if (TempData["Message"] != null)
                {
                string alertClass = TempData["MessageType"] == "success" ? "custom-alert-success" : "custom-alert-danger";
                string iconClass = TempData["MessageType"] == "success" ? "bi-check-circle-fill text-success" : "bi-exclamation-triangle-fill text-danger";

                <div class="alert @alertClass alert-dismissible fade show shadow-sm rounded-4 mb-4 border-0 d-flex align-items-center" role="alert">
                <div class="fs-4 me-3">
                <i class="bi @iconClass"></i>
                </div>

                <div class="text-dark fw-medium">
                @TempData["Message"]
                </div>

                <button type="button" class="btn-close btn-close-dark" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
                }*/
            }

            <div class="card mb-4 shadow-sm border-0">
                <div class="card-body">
                    <div class="d-flex gap-3">
                        <div class="me-2">
                            @if (!string.IsNullOrEmpty(currentUser?.ProfilePicture))
                            {
                                <img src="@currentUser.ProfilePicture"
                                     alt="Profile"
                                     class="rounded-circle border"
                                     style="width: 45px; height: 45px; object-fit: cover;">
                            }
                            else
                            {
                                <div class="rounded-circle d-flex align-items-center justify-content-center text-white fw-bold shadow-sm"
                                     style="width: 45px; height: 45px; background: linear-gradient(135deg, #a18cd1, #fbc2eb);">
                                    @(currentUser?.UserName?.Substring(0, 2).ToUpper() ?? "EU")
                                </div>
                            }
                        </div>
                        <div class="flex-grow-1">
                            <a asp-controller="Post" asp-action="Create" class="form-control text-start text-muted create-post-trigger bg-light border-0">
                                Ce ai pe suflet, @User.Identity?.Name?
                            </a>
                        </div>
                    </div>
                    <hr class="my-3 text-muted opacity-25">
                    <div class="d-flex gap-3 justify-content-around">
                        <a asp-controller="Post" asp-action="Create" class="btn btn-light btn-sm flex-fill rounded-pill"><i class="bi bi-image text-success me-1"></i> Foto</a>
                        <a asp-controller="Post" asp-action="Create" class="btn btn-light btn-sm flex-fill rounded-pill"><i class="bi bi-camera-video text-danger me-1"></i> Video</a>
                        <a asp-controller="Post" asp-action="Create" class="btn btn-light btn-sm flex-fill rounded-pill"><i class="bi bi-emoji-smile text-warning me-1"></i> Emoție</a>
                    </div>
                </div>
            </div>

            <div class="posts-feed">
                <h5 class="mb-3 fw-bold" style="color: #2c3e50;"><i class="bi bi-newspaper me-2"></i> Feed-ul tău</h5>

                @if (Model != null && Model.Any())
                {
                    // daca avem postari
                    @foreach (var post in Model)
                    {
                        <partial name="_PostCard" model="post" />
                    }

                    <div class="text-center mt-4 mb-5">
                        <button class="btn btn-outline-primary rounded-pill px-4">
                            <i class="bi bi-arrow-down-circle me-2"></i> Încarcă mai multe
