                    </div>
                }
                else
                {
                    // nu avem postari
                    <div class="text-center py-4 rounded-4 bg-white shadow-sm border mt-3">

                        <div class="mb-2">
                            <div class="d-inline-flex align-items-center justify-content-center rounded-circle"
                                 style="width: 50px; height: 50px; background: linear-gradient(135deg, rgba(161, 140, 209, 0.2), rgba(251, 194, 235, 0.2)); color: #8e44ad;">
                                <i class="bi bi-stars fs-4"></i>
                            </div>
                        </div>

                        <h6 class="fw-bold text-dark mb-1">Început de drum!</h6>
                        <p class="text-muted small mb-3">
                            Fii tu inspirația de azi.
                        </p>

                        <a asp-controller="Post" asp-action="Create" class="btn btn-sm text-white rounded-pill px-4 shadow-sm fw-bold"
                           style="background: linear-gradient(90deg, #a18cd1 0%, #fbc2eb 100%); border: none;">
                            <i class="bi bi-pen-fill me-1"></i> Scrie ceva
                        </a>

                    </div>
                }
            </div>
        </div>
    }
</div>

<style>
    .hero-section {
        background: linear-gradient(135deg, rgba(79, 70, 229, 0.1), rgba(16, 185, 129, 0.1));
        border: none;
    }

    .feature-icon i {
        font-size: 3rem;
        color: #8e44ad;
    }

    .user-avatar-large {
        width: 48px;
        height: 48px;
        border-radius: 50%;
        background: linear-gradient(135deg, #a18cd1, #fbc2eb);
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-weight: 600;
        font-size: 1.1rem;
        flex-shrink: 0;
    }

    .user-avatar {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        background: linear-gradient(135deg, #a18cd1, #fbc2eb);
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-weight: 600;
        font-size: 0.9rem;
        flex-shrink: 0;
    }

    .create-post-trigger {
        cursor: pointer;
        border-radius: 50px;
        padding: 0.75rem 1.25rem;
        transition: all 0.2s;
    }

    .create-post-trigger:hover {
        background: #e9ecef !important;
    }

    .post-card {
        transition: transform 0.2s;
        position: relative;
    }

    .post-card:hover {
        transform: translateY(-2px);
        box-shadow: 0 10px 20px rgba(0,0,0,0.1) !important;
        z-index: 1000;
    }
   
    .alert {
        background-color: #ffffff !important;
        border-left: 6px solid transparent !important; 
        padding: 1.25rem !important;
    }

    .custom-alert-success {
        border-left-color: #a18cd1 !important;
    }

    .custom-alert-success .text-success {
        color: #a18cd1 !important;
    }

    .custom-alert-danger {
        border-left-color: #e57373 !important;
    }

    .text-danger {
        color: #e57373 !important;
    }

    .alert .btn-close {
        padding: 1.5rem;
        opacity: 0.3;
        transition: opacity 0.2s;
    }

    .alert .btn-close:hover {
        opacity: 0.7;
    }
</style>

<script>
    console.log("🚀 Scriptul a pornit!");

    document.addEventListener('DOMContentLoaded', function () {
        console.log("📄 Pagina s-a incarcat complet.");

        // Găsim toate butoanele de like
        var buttons = document.querySelectorAll('.like-btn');
        console.log("Am gasit " + buttons.length + " butoane de Like.");

        // Adăugăm funcționalitatea pentru fiecare buton
        buttons.forEach(function(button) {
            button.addEventListener('click', function(e) {
                e.preventDefault(); // Oprim link-ul

                // --- AICI ESTE LOGICA ---
                var postId = this.getAttribute('data-post-id');
                var icon = this.querySelector('i'); // Iconita
                var countSpan = this.querySelector('.like-count'); // Numarul

                // Luam token-ul (input-ul ascuns generat de @Html.AntiForgeryToken)
                var tokenElement = document.querySelector('input[name="__RequestVerificationToken"]');
                var token = tokenElement ? tokenElement.value : null;

                if (!token) {
                    console.error("❌ Token-ul lipseste!");
                    alert("Eroare de securitate: Token lipsă.");
                    return;
                }

                console.log("❤️ Click pe postarea: " + postId);

                // Facem butonul sa "sara" putin (animatie)
                this.style.transform = "scale(1.2)";
                var btn = this; // Salvam referinta la buton
                setTimeout(function() { btn.style.transform = "scale(1)"; }, 200);

                // Trimitem datele la server
                fetch('/Reaction/ToggleLike', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/x-www-form-urlencoded',
                        'RequestVerificationToken': token
                    },
                    body: "postId=" + postId
                })
                .then(function(response) {
                    return response.json();
                })
                .then(function(data) {
                    console.log("📦 Raspuns server:", data);

                    if (data.success) {
                        // Actualizam numarul
                        countSpan.textContent = data.likesCount;

                        // Actualizam inima (Plina vs Goala)
                        if (data.liked) {
                            icon.classList.remove('bi-heart');
                            icon.classList.add('bi-heart-fill');
                            btn.classList.add('text-danger'); // Rosu
                            btn.classList.remove('text-muted');
                        } else {
                            icon.classList.remove('bi-heart-fill');
                            icon.classList.add('bi-heart');
                            btn.classList.remove('text-danger');
                            btn.classList.add('text-muted'); // Gri
                        }
                    } else {
                        console.error("Ceva nu a mers la server.");
                    }
                })
                .catch(function(err) {
                    console.error("Eroare retea:", err);
                });
            });
        });
    });
</script>
