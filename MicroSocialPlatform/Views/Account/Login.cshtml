@model MicroSocialPlatform.Models.LoginViewModel

@{
    ViewData["Title"] = "Autentificare";
    Layout = null; // Fara layout pentru pagina full-screen
}

<!DOCTYPE html>
<html lang="ro">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Agora</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <div class="auth-page-container">
        <div class="auth-card">
            <!-- Header -->
            <div class="auth-card-header">
                <div class="auth-logo">
                    <i class="bi bi-chat-dots-fill"></i>
                    <span>Agora</span>
                </div>
                <h2 class="auth-title">Bine ai revenit!</h2>
                <p class="auth-subtitle">Autentifică-te pentru a continua</p>
            </div>

            <!-- Body -->
            <div class="auth-card-body">
                <form method="post" asp-controller="Account" asp-action="Login" asp-route-returnUrl="@Model.ReturnUrl">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                    <!-- Email -->
                    <div class="form-floating mb-3">
                        <input asp-for="Email" class="form-control" placeholder="Email" />
                        <label asp-for="Email">Email</label>
                        <span asp-validation-for="Email" class="text-danger small"></span>
                    </div>

                    <!-- Password -->
                    <div class="form-floating mb-3">
                        <input asp-for="Password" class="form-control" placeholder="Parolă" />
                        <label asp-for="Password">Parolă</label>
                        <span asp-validation-for="Password" class="text-danger small"></span>
                    </div>

                    <!-- Remember Me -->
                    <div class="form-check mb-4">
                        <input asp-for="RememberMe" class="form-check-input" />
                        <label asp-for="RememberMe" class="form-check-label">
                            Ține-mă minte
                        </label>
                    </div>

                    <!-- Submit Button -->
                    <button type="submit" class="btn btn-primary w-100 mb-3">
                        <i class="bi bi-box-arrow-in-right"></i> Autentifică-te
                    </button>

                    <!-- External Logins -->
                    @if (Model.ExternalLogins?.Count > 0)
                    {
                        <div class="auth-divider">sau autentifică-te cu</div>

                        <div class="d-grid gap-2">
                            @foreach (var provider in Model.ExternalLogins)
                            {
                                <button type="submit"
                                        class="btn btn-outline-primary"
                                        asp-controller="Account"
                                        asp-action="ExternalLogin"
                                        asp-route-provider="@provider.Name"
                                        asp-route-returnUrl="@Model.ReturnUrl"
                                        title="Autentifică-te folosind @provider.DisplayName">
                                    @provider.DisplayName
                                </button>
                            }
                        </div>
                    }
                </form>
            </div>

            <!-- Footer -->
            <div class="auth-footer">
                Nu ai un cont?
                <a asp-controller="Account" asp-action="Register" asp-route-returnUrl="@Model.ReturnUrl">
                    Înregistrează-te aici
                </a>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>
