@model MicroSocialPlatform.Models.RegisterViewModel

@{
    ViewData["Title"] = "Înregistrare";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card-header">
                <h4 class="mb-0">Creează un cont nou</h4>
            </div>
            <div class="card-body">
                <form asp-action="Register" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger text-center mb-3"></div>
                    <div class="mb-3">
                        <label asp-for="FullName" class="form-label">Nume complet</label>
                        <input asp-for="FullName" class="form-control" placeholder="Ex: Popescu Ion" />
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Email" class="form-label">Adresă de email</label>
                        <input asp-for="Email" class="form-control" placeholder="nume@email.com" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Password" class="form-label">Parola</label>
                            <input asp-for="Password" class="form-control" type="password" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="ConfirmPassword" class="form-label">Confirma parola</label>
                            <input asp-for="ConfirmPassword" class="form-control" type="password" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="d-grid">
                        <button type="submit" class="btn btn-success">Înregistrează-te</button>
                    </div>
                </form>
            </div>
            <div class="card-footer text-center">
                Ai deja cont? <a asp-controller="Account" asp-action="Login"">Conectează-te aici</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
