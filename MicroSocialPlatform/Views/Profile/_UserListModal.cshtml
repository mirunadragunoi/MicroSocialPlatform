@model IEnumerable<MicroSocialPlatform.Models.ApplicationUser>

<div class="list-group list-group-flush">
    @if (!Model.Any())
    {
        <div class="text-center py-4 text-muted">
            <i class="bi bi-people fs-1"></i>
            <p class="mb-0">Lista este goală.</p>
        </div>
    }
    else
    {
        @foreach (var user in Model)
        {
            <div class="list-group-item d-flex align-items-center py-3 border-0">
                <a asp-controller="Profile" asp-action="Index" asp-route-username="@user.CustomUsername" class="text-decoration-none me-3">
                    @if (!string.IsNullOrEmpty(user.ProfilePicture))
                    {
                        <img src="@user.ProfilePicture" class="rounded-circle border"
                             style="width: 45px; height: 45px; object-fit: cover;">
                    }
                    else
                    {
                        <div class="rounded-circle bg-secondary text-white d-flex align-items-center justify-content-center"
                             style="width: 45px; height: 45px; font-weight: bold;">
                            @user.UserName.Substring(0, 1).ToUpper()
                        </div>
                    }
                </a>

                <div class="flex-grow-1">
                    <a asp-controller="Profile" asp-action="Index" asp-route-username="@user.CustomUsername" class="text-decoration-none text-dark fw-bold">
                        @user.FullName
                    </a>
                    <div class="text-muted small">@user.CustomUsername</div>
                </div>

                <a asp-controller="Profile" asp-action="Index" asp-route-username="@(user.CustomUsername ?? user.UserName)" class="btn btn-sm btn-outline-primary rounded-pill px-3">
                    Vezi Profil
                </a>
            </div>
        }
    }
</div>