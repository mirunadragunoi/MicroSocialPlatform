<style>
    /* Clasa ajutatoare pentru a face alerta sa arate a "Card" */
    .alert-clean {
        background-color: white;
        color: #2d3436; 
        border: none;
        border-radius: 12px;
        box-shadow: 0 4px 15px rgba(0,0,0,0.05); 
        display: flex;
        align-items: center;
        padding: 1rem 1.5rem;
    }

        .alert-clean .btn-close {
            filter: none;
            opacity: 0.3;
        }

            .alert-clean .btn-close:hover {
                opacity: 1;
            }
</style>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-clean alert-dismissible fade show mb-4" role="alert"
         style="border-left: 6px solid #00b894;">
        <div class="me-3 d-flex align-items-center justify-content-center rounded-circle"
             style="width: 40px; height: 40px; background-color: #e6fcf5;">
            <i class="bi bi-check-lg fs-5" style="color: #00b894;"></i>
        </div>

        <div>
            <strong class="d-block text-uppercase" style="font-size: 0.7rem; color: #00b894; letter-spacing: 1px;">Succes</strong>
            <span style="font-size: 0.95rem;">@TempData["SuccessMessage"]</span>
        </div>

        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
