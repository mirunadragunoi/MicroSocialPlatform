@model MicroSocialPlatform.Models.Post

@{
    var username = Model.User?.CustomUsername ?? Model.User?.UserName ?? "anonim";
    var userInitials = Model.User?.UserName?.Substring(0, 2).ToUpper() ?? "AN";
    var hasMedia = Model.PostMedias != null && Model.PostMedias.Any();
    var firstMedia = hasMedia ? Model.PostMedias.First() : null;
}

<div class="card border-0 shadow-sm rounded-4 post-saved-card h-100 position-relative"
     data-post-id="@Model.Id"
     style="transition: all 0.3s; overflow: hidden;">

    @* ✅ Dropdown 3 puncte (top-right) *@
    <div class="position-absolute top-0 end-0 p-2" style="z-index: 10;">
        <div class="dropdown">
            <button class="btn btn-sm btn-light rounded-circle p-2 shadow-sm"
                    type="button"
                    data-bs-toggle="dropdown"
                    aria-expanded="false"
                    onclick="event.stopPropagation(); event.preventDefault();"
                    style="width: 32px; height: 32px; display: flex; align-items: center; justify-content: center; backdrop-filter: blur(10px); background: rgba(255, 255, 255, 0.9);">
                <i class="bi bi-three-dots-vertical"></i>
            </button>
            <ul class="dropdown-menu dropdown-menu-end shadow-sm rounded-3 border-0" style="min-width: 180px;">
                <li>
                    <button class="dropdown-item d-flex align-items-center gap-2 py-2 text-danger"
                            onclick="unsavePost(@Model.Id, this); event.stopPropagation();">
                        <i class="bi bi-bookmark-x"></i>
                        <span>Elimină din salvate</span>
                    </button>
                </li>
            </ul>
        </div>
    </div>

    @* ✅ Link-ul care deschide Details *@
    <a asp-controller="Post" asp-action="Details" asp-route-id="@Model.Id"
       class="text-decoration-none d-block h-100"
       style="cursor: pointer;">

        @if (hasMedia && firstMedia != null)
        {
            <!-- Post cu media -->
            <div class="position-relative" style="aspect-ratio: 1; overflow: hidden;">
                @if (firstMedia.MediaType == MicroSocialPlatform.Models.MediaType.Image)
                {
                    <img src="@firstMedia.Url" alt="Post" class="w-100 h-100" style="object-fit: cover; transition: transform 0.3s;">
                }
                else if (firstMedia.MediaType == MicroSocialPlatform.Models.MediaType.Video)
                {
                    <video class="w-100 h-100" style="object-fit: cover; pointer-events: none;" muted>
                        <source src="@firstMedia.Url" type="video/mp4">
                    </video>
                }

                <!-- Overlay cu stats -->
                <div class="position-absolute top-0 start-0 w-100 h-100 d-flex align-items-center justify-content-center overlay-stats"
                     style="background: rgba(0,0,0,0.4); opacity: 0; transition: opacity 0.3s;">
                    <div class="text-white text-center">
                        <div class="mb-2">
                            <i class="bi bi-heart-fill fs-4 me-2"></i>
                            <span class="fs-5 fw-bold">@Model.LikesCount</span>
                        </div>
                        <div>
                            <i class="bi bi-chat-fill fs-4 me-2"></i>
                            <span class="fs-5 fw-bold">@Model.CommentsCount</span>
                        </div>
                    </div>
                </div>
            </div>
        }
        else
        {
            <!-- Post fără media -->
            <div class="card-body p-3" style="min-height: 200px; display: flex; flex-direction: column;">
                <!-- User Info -->
                <div class="d-flex align-items-center gap-2 mb-2">
                    <div class="user-avatar-mini" style="width: 32px; height: 32px; border-radius: 50%; background: linear-gradient(135deg, #a18cd1, #fbc2eb); display: flex; align-items: center; justify-content: center; color: white; font-weight: 600; font-size: 0.8rem;">
                        <span>@userInitials</span>
                    </div>
                    <div class="flex-grow-1">
                        <div class="fw-bold text-dark small">@(Model.User?.FullName ?? Model.User?.UserName ?? "Anonim")</div>
                        <div class="text-muted" style="font-size: 0.75rem;">@@@username</div>
                    </div>
                </div>

                <!-- Content -->
                @if (!string.IsNullOrEmpty(Model.Content))
                {
                    <p class="text-dark mb-2" style="font-size: 0.9rem; overflow: hidden; text-overflow: ellipsis; display: -webkit-box; -webkit-line-clamp: 4; -webkit-box-orient: vertical; flex-grow: 1;">
                        @Model.Content
                    </p>
                }

                <!-- Stats -->
                <div class="d-flex gap-3 mt-auto pt-2 border-top">
                    <small class="text-muted">
                        <i class="bi bi-heart me-1"></i>@Model.LikesCount
                    </small>
                    <small class="text-muted">
                        <i class="bi bi-chat me-1"></i>@Model.CommentsCount
                    </small>
                    <small class="text-muted ms-auto">
                        @Model.CreatedAt.ToLocalTime().ToString("dd MMM")
                    </small>
                </div>
            </div>
        }
    </a>
</div>

<style>
    .post-saved-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 25px rgba(0,0,0,0.15) !important;
    }

        .post-saved-card:hover .overlay-stats {
            opacity: 1 !important;
        }

        .post-saved-card:hover img {
            transform: scale(1.05);
        }

    .post-saved-card video {
        pointer-events: none;
    }

    .dropdown-menu {
        animation: fadeIn 0.2s ease-in-out;
    }

    @@keyframes fadeIn {
        from

    {
        opacity: 0;
        transform: translateY(-10px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }
</style>

