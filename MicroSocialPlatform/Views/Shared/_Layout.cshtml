<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Agora</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MicroSocialPlatform.styles.css" asp-append-version="true" />

    <style>
        /* Badge pentru notificări în sidebar */
        .notification-badge {
            background: linear-gradient(135deg, #ff6b6b, #ee5a6f);
            color: white;
            font-size: 0.7rem;
            font-weight: bold;
            padding: 2px 6px;
            border-radius: 10px;
            margin-left: auto;
            display: none; /* Ascuns implicit */
            animation: pulse 2s infinite;
        }

            .notification-badge.show {
                display: inline-block;
            }

        @@keyframes pulse {
            0%, 100% {
                transform: scale(1);
            }

            50% {
                transform: scale(1.1);
            }
        }

        /* alert overlay pt utilizatori neautentificati */
        .auth-alert-overlay {
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: rgba(0, 0, 0, 0.5);
            backdrop-filter: blur(5px);
            z-index: 10000;
            display: flex;
            align-items: center;
            justify-content: center;
            animation: fadeIn 0.3s ease-out;
        }

        .auth-alert-content {
            background: white;
            border-radius: 16px;
            padding: 2.5rem;
            max-width: 500px;
            width: 90%;
            box-shadow: 0 10px 40px rgba(0, 0, 0, 0.3);
            position: relative;
            animation: slideUp 0.3s ease-out;
        }

        .auth-alert-icon {
            width: 80px;
            height: 80px;
            margin: 0 auto;
            background: linear-gradient(135deg, #667eea, #764ba2);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 2.5rem;
            color: white;
        }

        .alert-close {
            position: absolute;
            top: 1rem;
            right: 1rem;
            background: none;
            border: none;
            color: #6c757d;
            font-size: 1.5rem;
            cursor: pointer;
            padding: 0.5rem;
            transition: color 0.2s;
        }

            .alert-close:hover {
                color: #495057;
            }

        @@keyframes fadeIn {
            from { opacity: 0; }
            to { opacity: 1; }
        }

        @@keyframes slideUp {
            from {
                transform: translateY(50px);
                opacity: 0;
            }
            to {
                transform: translateY(0);
                opacity: 1;
            }
        }
    </style>
</head>

<script>
    // 1. Functii pentru alert autentificare
    function showAuthAlert() {
        const alert = document.getElementById('authRequiredAlert');
        if (alert) {
            alert.style.display = 'flex';
            document.body.style.overflow = 'hidden'; // blocheaza scroll-ul
        }
    }

    function closeAuthAlert() {
        const alert = document.getElementById('authRequiredAlert');
        if (alert) {
            alert.style.display = 'none';
            document.body.style.overflow = ''; // Restore scroll
        }
    }

    // Inchide alert cand se da click pe fundal
    document.addEventListener('DOMContentLoaded', function() {
        const overlay = document.getElementById('authRequiredAlert');
        if (overlay) {
            overlay.addEventListener('click', function(e) {
                if (e.target === overlay) {
                    closeAuthAlert();
                }
            });
        }
    });

    // 2. Functii pentru alerte plutitoare (Toast)
    function showFloatingAlert(message, type) {
        const container = document.getElementById('ajax-alert-container');

        let bgStyle = '';
        let iconClass = '';

        if (type === 'success') {
            // Salvare - VERDE
            bgStyle = 'background-color: #d1e7dd; color: #0f5132; border: 1px solid #badbcc;';
            iconClass = 'bi-check-circle-fill';
        } else {
            // Stergere - ROSU
            bgStyle = 'background-color: #ffffff; color: #dc3545; border: 1px solid #dc3545; border-left: 5px solid #dc3545;';
            iconClass = 'bi-trash3-fill';
        }

        const html = `
            <div class="alert alert-dismissible fade show shadow rounded-3 mb-2" role="alert" style="${bgStyle}">
                <div class="d-flex align-items-center">
                    <i class="bi ${iconClass} fs-4 me-2"></i>
                    <div class="fw-bold">${message}</div>
                </div>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        `;

        container.innerHTML = html;

        setTimeout(() => {
            const alertElement = container.querySelector('.alert');
            if (alertElement) {
                const bsAlert = new bootstrap.Alert(alertElement);
                bsAlert.close();
            }
        }, 3000);
    }

    // 3. MODALA DE APRECIERI (LIKES) - VERSIUNEA CORECTA
    function openLikesModal(postId) {
        const modalElement = document.getElementById('likesModal');
        const modalBody = document.getElementById('likesModalBody');

        // Protectie: daca elementele nu exista in pagina, ne oprim
        if (!modalElement || !modalBody) return;

        const bsModal = new bootstrap.Modal(modalElement);

        // Configurare Emoji Map
        const emojiMap = {
            1: '❤️', 2: '🥰', 3: '😂', 4: '😮', 5: '😢', 6: '😠'
        };

        modalBody.innerHTML = `
            <div class="text-center py-5">
                <div class="spinner-border text-primary" role="status"></div>
            </div>`;
        bsModal.show();

        // ATENTIE: Verifica ruta aici. Daca controllerul e "PostsController", pune "/Posts/". Daca e "PostController", pune "/Post/"
        fetch(`/Post/GetPostLikes/${postId}`)
            .then(response => {
                if (!response.ok) throw new Error("Network response was not ok");
                return response.json();
            })
            .then(users => {
                if (users.length === 0) {
                    modalBody.innerHTML = `
                        <div class="text-center py-5 text-muted">
                            <i class="bi bi-heart fs-1 opacity-50"></i>
                            <p class="mt-2 mb-0">Nimeni nu a apreciat încă.</p>
                        </div>`;
                    return;
                }

                let html = '<div class="list-group list-group-flush py-2">';

                users.forEach(user => {
                    let avatarHtml = '';
                    if (user.profilePicture) {
                        avatarHtml = `<img src="${user.profilePicture}" class="rounded-circle border" style="width: 100%; height: 100%; object-fit: cover;">`;
                    } else {
                        let initials = (user.userName || "AN").substring(0, 2).toUpperCase();
                        avatarHtml = `
                            <div class="rounded-circle d-flex align-items-center justify-content-center bg-light text-primary border fw-bold"
                                 style="width: 100%; height: 100%;">
                                ${initials}
                            </div>`;
                    }

                    let reactionEmoji = emojiMap[user.reactionType] || '❤️';

                    html += `
                        <a href="/Profile?username=${user.userName}" class="list-group-item list-group-item-action border-0 px-4 py-2">
                            <div class="d-flex align-items-center">
                                <div class="position-relative me-3" style="width: 48px; height: 48px; flex-shrink: 0;">
                                    ${avatarHtml}

                                    <span class="position-absolute bg-white rounded-circle d-flex align-items-center justify-content-center shadow-sm"
                                          style="width: 22px; height: 22px; font-size: 14px; bottom: -2px; right: -2px; border: 2px solid white; z-index: 2;">
                                        ${reactionEmoji}
                                    </span>
                                </div>

                                <div class="overflow-hidden">
                                    <h6 class="mb-0 fw-bold text-dark text-truncate">${user.fullName || user.userName}</h6>
                                    <small class="text-muted">${user.userName}</small>
                                </div>
                                <div class="ms-auto ps-2">
                                    <i class="bi bi-chevron-right text-muted opacity-50"></i>
                                </div>
                            </div>
                        </a>
                    `;
                });

                html += '</div>';
                modalBody.innerHTML = html;
            })
            .catch(err => {
                console.error(err);
                modalBody.innerHTML = '<p class="text-danger text-center py-4">Eroare la încărcare. Verifică consola (F12).</p>';
            });
    }
</script>

<body>
    @using Microsoft.AspNetCore.Identity
    @using MicroSocialPlatform.Models
    @inject SignInManager<ApplicationUser> SignInManager
    @inject UserManager<ApplicationUser> UserManager

    <div id="authRequiredAlert" class="auth-alert-overlay" style="display: none;">
        <div class="auth-alert-content">
            <button type="button" class="alert-close" onclick="closeAuthAlert()">
                <i class="bi bi-x-lg"></i>
            </button>
            <div class="text-center">
                <div class="auth-alert-icon mb-3">
                    <i class="bi bi-lock-fill"></i>
                </div>
                <h5 class="mb-2">Autentificare Necesară</h5>
                <p class="text-muted mb-4">
                    Pentru a reacționa la postări, a adăuga comentarii,
                    sau a crea grupuri noi trebuie să fii autentificat.
                </p>
                <div class="d-flex gap-2 justify-content-center">
                    <a asp-controller="Account" asp-action="Login" class="btn btn-primary px-4">
                        <i class="bi bi-box-arrow-in-right me-2"></i>Autentificare
                    </a>
                    <a asp-controller="Account" asp-action="Register" class="btn btn-outline-primary px-4">
                        <i class="bi bi-person-plus me-2"></i>Creare Cont
                    </a>
                </div>
            </div>
        </div>
    </div>

    <nav class="top-navbar">
        <div class="top-navbar-content">
            <div class="navbar-logo">
                <a asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-chat-dots-fill"></i>
                    <span>Agora</span>
                </a>
            </div>

            <div class="navbar-search">
                <form method="get" action="@Url.Action("Index", "Search")" class="w-100">
                    <div class="search-box">
                        <i class="bi bi-search"></i>
                        <input type="text" name="q" placeholder="Cauta profiluri sau postari..." value="@(ViewBag.SearchQuery ?? "")" />
                    </div>
                </form>
            </div>

            <div class="navbar-user">
                <partial name="_LoginPartial" />
            </div>
        </div>
    </nav>


    <aside class="sidebar">
        <nav class="sidebar-nav">
            @if (SignInManager.IsSignedIn(User))
            {
                @if (User.IsInRole("Administrator"))
                {
                    <a asp-area="" asp-controller="Home" asp-action="Index" class="sidebar-link active">
                        <i class="bi bi-house-door-fill"></i>
                        <span>Acasa</span>
                    </a>

                    <a asp-area="" asp-controller="Groups" asp-action="Index" class="sidebar-link">
                        <i class="bi bi-people-fill"></i>
                        <span>Grupuri</span>
                    </a>

                    <a asp-area="" asp-controller="Post" asp-action="Saved" class="sidebar-link">
                        <i class="bi bi-bookmark-fill"></i>
                        <span>Salvate</span>
                    </a>

                    <a asp-area="" asp-controller="Admin" asp-action="Users" class="sidebar-link">
                        <i class="bi bi-shield-fill"></i>
                        <span>Utilizatori</span>
                    </a>

                    <a asp-area="" asp-controller="Admin" asp-action="Report" class="sidebar-link">
                        <i class="bi bi-shield-fill"></i>
                        <span>Raportări</span>
                    </a>

                    <a asp-area="" asp-controller="Admin" asp-action="Index" class="sidebar-link">
                        <i class="bi bi-speedometer2"></i>
                        <span>Dashboard Admin</span>
                    </a>


                    <a asp-area="" asp-controller="Profile" asp-action="Index" class="sidebar-link">
                        <i class="bi bi-person-circle"></i>
                        <span>Profil</span>
                    </a>

                    <hr class="sidebar-divider">

                    <a asp-area="" asp-controller="Post" asp-action="Create" class="sidebar-link sidebar-create">
                        <i class="bi bi-plus-circle-fill"></i>
                        <span>Postare nouă</span>
                    </a>
                }
                else
                {
                    <a asp-area="" asp-controller="Home" asp-action="Index" class="sidebar-link active">
                        <i class="bi bi-house-door-fill"></i>
                        <span>Acasa</span>
                    </a>

                    <a asp-area="" asp-controller="Groups" asp-action="Index" class="sidebar-link">
                        <i class="bi bi-people-fill"></i>
                        <span>Grupuri</span>
                    </a>

                    <a asp-area="" asp-controller="Post" asp-action="Saved" class="sidebar-link">
                        <i class="bi bi-bookmark-fill"></i>
                        <span>Salvate</span>
                    </a>

                    <a asp-area="" asp-controller="Notification" asp-action="Index" class="sidebar-link position-relative">
                        <i class="bi bi-bell-fill"></i>
                        <span>Notificări</span>
                        <span class="notification-badge" id="sidebarNotificationBadge">0</span>
                    </a>

                    <a asp-area="" asp-controller="Profile" asp-action="Index" class="sidebar-link">
                        <i class="bi bi-person-circle"></i>
                        <span>Profil</span>
                    </a>

                    <hr class="sidebar-divider">

                    <a asp-area="" asp-controller="Post" asp-action="Create" class="sidebar-link sidebar-create">
                        <i class="bi bi-plus-circle-fill"></i>
                        <span>Postare nouă</span>
                    </a>
                }
            }
            else
            {
                <a asp-area="" asp-controller="Home" asp-action="Index" class="sidebar-link active">
                    <i class="bi bi-house-door-fill"></i>
                    <span>Acasă</span>
                </a>

                <a asp-area="" asp-controller="Groups" asp-action="Index" class="sidebar-link">
                    <i class="bi bi-people-fill"></i>
                    <span>Grupuri</span>
                </a>

                <a asp-controller="Account" asp-action="Register" class="sidebar-link sidebar-highlight">
                    <i class="bi bi-person-plus-fill"></i>
                    <span>Înregistrare</span>
                </a>

                <a asp-controller="Account" asp-action="Login" class="sidebar-link">
                    <i class="bi bi-box-arrow-in-right"></i>
                    <span>Autentificare</span>
                </a>
            }
        </nav>

        <div class="sidebar-footer">
            <small>&copy; 2025 Agora</small>
        </div>
    </aside>

    <div id="ajax-alert-container" style="position: fixed; top: 100px; right: 20px; z-index: 9999; min-width: 300px;"></div>

    <main class="main-content">
        <div class="content-wrapper">
            <partial name="_StatusMessages" />
            @RenderBody()
        </div>
    </main>

    <div class="modal fade" id="likesModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
            <div class="modal-content rounded-4 shadow border-0">
                <div class="modal-header border-0 pb-0">
                    <h5 class="modal-title fw-bold">Aprecieri</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body p-0" id="likesModalBody">
                </div>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @if (SignInManager.IsSignedIn(User))
    {
        <script>
            // Update notification count on page load și periodic
            function updateNotificationCount() {
                fetch('/Notification/GetUnreadCount')
                    .then(response => response.json())
                    .then(data => {
                        const badge = document.getElementById('sidebarNotificationBadge');

                        if (badge) {
                            if (data.count > 0) {
                                badge.textContent = data.count;
                                badge.classList.add('show');
                            } else {
                                badge.classList.remove('show');
                            }
                        }
                    })
                    .catch(error => console.error('Error loading notification count:', error));
            }

            // Actualizează la încărcare
            document.addEventListener('DOMContentLoaded', function() {
                updateNotificationCount();

                // Actualizează la fiecare 30 secunde
                setInterval(updateNotificationCount, 30000);
            });
        </script>
    }

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>