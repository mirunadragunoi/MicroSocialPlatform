<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Agora</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MicroSocialPlatform.styles.css" asp-append-version="true" />
</head>
<body>
    <!-- top navbar orizontal-->
    <nav class="top-navbar">
        <div class="top-navbar-content">
            <!-- logo agora pe stanga -->
            <div class="navbar-logo">
                <a asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-chat-dots-fill"></i>
                    <span>Agora</span>
                </a>
            </div>

            <!-- search bar pe centru -->
            <div class="navbar-search">
                <form method="get" action="@Url.Action("Index", "Search")" class="w-100">
                    <div class="search-box">
                        <i class="bi bi-search"></i>
                        <input type="text" name="q" placeholder="Cauta profiluri sau postari..." value="@(ViewBag.SearchQuery ?? "")" />
                    </div>
                </form>
            </div>

            <!-- user menu pe dreapta -->
            <div class="navbar-user">
                <partial name="_LoginPartial" />
            </div>
        </div>
    </nav>


    <!-- sidebar vertical pe stanga -->
    <aside class="sidebar">
        <nav class="sidebar-nav">
            @if (SignInManager.IsSignedIn(User))
            {
                <!-- menu pentru utilizatorii autentificati -->
                <a asp-area="" asp-controller="Home" asp-action="Index" class="sidebar-link active">
                    <i class="bi bi-house-door-fill"></i>
                    <span>Acasa</span>
                </a>

                <a asp-area="" asp-controller="Groups" asp-action="Index" class="sidebar-link">
                    <i class="bi bi-people-fill"></i>
                    <span>Grupuri</span>
                </a>

                <a asp-area="" asp-controller="Notifications" asp-action="Index" class="sidebar-link">
                    <i class="bi bi-bell-fill"></i>
                    <span>Notificări</span>
                    <span class="notification-badge">3</span>
                </a>

                <a asp-area="" asp-controller="Profile" asp-action="Index" class="sidebar-link">
                    <i class="bi bi-person-circle"></i>
                    <span>Profil</span>
                </a>

                <hr class="sidebar-divider">

                <a asp-area="" asp-controller="Post" asp-action="Create" class="sidebar-link sidebar-create">
                    <i class="bi bi-plus-circle-fill"></i>
                    <span>Postare nouă</span>
                </a>
            }
            else
            {
                <!-- menu pentru vizitatori -->
                <a asp-area="" asp-controller="Home" asp-action="Index" class="sidebar-link active">
                    <i class="bi bi-house-door-fill"></i>
                    <span>Acasă</span>
                </a>

                <a asp-area="" asp-controller="Home" asp-action="About" class="sidebar-link">
                    <i class="bi bi-info-circle-fill"></i>
                    <span>Despre</span>
                </a>

                <a asp-area="Identity" asp-page="/Account/Register" class="sidebar-link sidebar-highlight">
                    <i class="bi bi-person-plus-fill"></i>
                    <span>Înregistrare</span>
                </a>

                <a asp-area="Identity" asp-page="/Account/Login" class="sidebar-link">
                    <i class="bi bi-box-arrow-in-right"></i>
                    <span>Autentificare</span>
                </a>
            }
        </nav>

        <!-- fotter sidebar -->
        <div class="sidebar-footer">
            <small>&copy; 2025 Agora</small>
        </div>
    </aside>

    <!-- main content area -->
    <main class="main-content">
        <div class="content-wrapper">
            @RenderBody()
        </div>
    </main>

    @using Microsoft.AspNetCore.Identity
    @using MicroSocialPlatform.Models
    @inject SignInManager<ApplicationUser> SignInManager
    @inject UserManager<ApplicationUser> UserManager

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
