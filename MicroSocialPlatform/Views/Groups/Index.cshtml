@model IEnumerable<MicroSocialPlatform.Models.Group>

@{
    ViewData["Title"] = "Grupuri";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-5">
        <div>
            <h2 class="fw-bold mb-1" style="color: #2c3e50;">
                <i class="bi bi-people-fill me-2" style="color: #a18cd1;"></i> Descoperă Grupuri
            </h2>
            <p class="text-muted mb-0">Găsește-ți tribul sau creează-ți propria comunitate.</p>
        </div>

        <a asp-action="Create" class="btn text-white rounded-pill px-4 py-2 shadow-sm fw-bold d-flex align-items-center"
           style="background: linear-gradient(90deg, #a18cd1 0%, #fbc2eb 100%); border: none; transition: transform 0.2s;">
            <i class="bi bi-plus-circle-fill me-2"></i> Grup Nou
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="text-center py-5 rounded-4 bg-white shadow-sm border">
            <div class="mb-3">
                <div class="d-inline-flex align-items-center justify-content-center rounded-circle"
                     style="width: 80px; height: 80px; background: linear-gradient(135deg, rgba(161, 140, 209, 0.2), rgba(251, 194, 235, 0.2)); color: #8e44ad;">
                    <i class="bi bi-collection fs-1"></i>
                </div>
            </div>
            <h4 class="fw-bold text-dark">Încă nu există grupuri</h4>
            <p class="text-muted mb-4">Fii tu primul care creează o comunitate pe Agora!</p>
            <a asp-action="Create" class="btn btn-outline-primary rounded-pill px-4">
                Începe acum
            </a>
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var group in Model)
            {
                var currentUserId = ViewBag.CurrentUserId as string;
                var myMembership = group.Members.FirstOrDefault(m => m.UserId == currentUserId);

                bool isMember = myMembership != null;
                bool isGroupAdmin = isMember && myMembership.Role == MicroSocialPlatform.Models.GroupRole.Admin;

                <div class="col-md-6 col-lg-4">
                    <div class="card h-100 border-0 shadow-sm rounded-4 group-card overflow-hidden">

                        <div class="card-header-pattern" style="height: 60px; background: linear-gradient(135deg, #a18cd1 0%, #fbc2eb 100%); opacity: 0.8;"></div>

                        <div class="card-body text-center mt-n5 position-relative">

                            <div class="mx-auto mb-3 d-flex align-items-center justify-content-center rounded-circle bg-white shadow-sm border border-3 border-white"
                                 style="width: 80px; height: 80px;">

                                @if (!string.IsNullOrEmpty(group.GroupPicture))
                                {
                                    <img src="@group.GroupPicture" class="rounded-circle w-100 h-100"
                                         style="object-fit: cover;" alt="@group.Name">
                                }
                                else
                                {
                                    <div class="rounded-circle d-flex align-items-center justify-content-center w-100 h-100"
                                         style="background-color: #f8f9fa; color: #8e44ad; font-weight: 700; font-size: 1.5rem;">
                                        @(group.Name.Length >= 2 ? group.Name.Substring(0, 2).ToUpper() : group.Name.Substring(0, 1).ToUpper())
                                    </div>
                                }
                            </div>

                            @if (isGroupAdmin)
                            {
                                <span class="position-absolute top-0 end-0 m-3 badge rounded-pill bg-warning text-dark shadow-sm"
                                      title="Ești administratorul acestui grup">
                                    <i class="bi bi-star-fill me-1"></i> Admin
                                </span>
                            }
                            else if (isMember)
                            {
                                <span class="position-absolute top-0 end-0 m-3 badge rounded-pill bg-success shadow-sm">
                                    <i class="bi bi-check-circle-fill me-1"></i> Membru
                                </span>
                            }

                            <h5 class="card-title fw-bold text-dark mb-1 text-truncate px-2" title="@group.Name">
                                @group.Name
                            </h5>

                            <p class="text-muted small mb-2">
                                <i class="bi bi-person-badge"></i> Admin:
                                <span class="fw-bold">@(group.Owner?.UserName ?? "Necunoscut")</span>
                            </p>

                            <div class="mb-3">
                                <span class="badge rounded-pill fw-normal px-3 py-1" style="background-color: #f3e5f5; color: #8e44ad;">
                                    <i class="bi bi-people-fill me-1"></i> @group.Members.Count membru@(group.Members.Count != 1 ? "i" : "")
                                </span>
                            </div>

                            <p class="card-text text-muted small px-2" style="height: 2.6em; overflow: hidden; display: -webkit-box; -webkit-line-clamp: 2; -webkit-box-orient: vertical;">
                                @(string.IsNullOrEmpty(group.Description) ? "Fără descriere." : group.Description)
                            </p>

                            @if (isMember)
                            {
                                <div class="d-flex justify-content-center gap-2 mt-3 px-2">
                                    <a asp-action="Details" asp-route-id="@group.Id"
                                       class="btn btn-sm btn-outline-primary rounded-pill px-3 flex-grow-1 group-btn">
                                        Deschide
                                    </a>

                                    <form asp-action="Leave" asp-route-id="@group.Id" method="post" class="d-inline">
                                        <button type="submit" class="btn btn-sm btn-outline-danger rounded-pill px-3 group-btn" title="Părăsește grupul"
                                                onclick="return confirm('Sigur vrei să părăsești acest grup?');">
                                            <i class="bi bi-box-arrow-right"></i>
                                        </button>
                                    </form>
                                </div>
                            }
                            else
                            {
                                <a asp-action="Details" asp-route-id="@group.Id"
                                   class="btn btn-sm btn-outline-primary rounded-pill w-75 mt-2 group-btn">
                                    Vezi Grup
                                </a>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

<style>
    .group-card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .group-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 25px rgba(161, 140, 209, 0.2) !important;
        }

    .group-btn:hover {
        background-color: #8e44ad;
        color: white;
        border-color: #8e44ad;
    }
</style>