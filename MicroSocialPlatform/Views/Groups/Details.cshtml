@model MicroSocialPlatform.Models.Group

@{
    ViewData["Title"] = Model.Name;
    string currentUserId = ViewBag.CurrentUserId as string;
    bool isMember = ViewBag.IsMember;

    // permisiuni
    bool amIAdmin = false;
    bool amIStaff = false;

    if (currentUserId != null)
    {
        var myMembership = Model.Members.FirstOrDefault(m => m.UserId == currentUserId);

        if (myMembership != null)
        {
            if (myMembership.Role == MicroSocialPlatform.Models.GroupRole.Admin)
            {
                amIAdmin = true;
                amIStaff = true;
            }
            else if (myMembership.Role == MicroSocialPlatform.Models.GroupRole.Moderator)
            {
                amIStaff = true;
            }
        }
    }
    bool isAdmin = amIAdmin;
}

<div class="container py-4">

    <div class="card border-0 shadow-sm rounded-4 overflow-hidden mb-4">
        <div style="height: 120px; background: linear-gradient(135deg, #a18cd1 0%, #fbc2eb 100%); position: relative;">
            <a asp-action="Index" class="btn btn-sm btn-light position-absolute top-0 start-0 m-3 rounded-pill opacity-75 fw-bold text-decoration-none">
                <i class="bi bi-arrow-left"></i> Înapoi
            </a>

            @if (isAdmin)
            {
                <div class="position-absolute top-0 end-0 m-3 d-flex gap-2">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-sm btn-light rounded-pill opacity-75 fw-bold text-decoration-none">
                        <i class="bi bi-gear-fill"></i> Setări
                    </a>
                    <form asp-action="Delete" asp-route-id="@Model.Id" method="post" onsubmit="return confirm('Ești sigur că vrei să ștergi DEFINITIV acest grup?');">
                        <button type="submit" class="btn btn-sm btn-danger rounded-pill opacity-90 fw-bold border-0">
                            <i class="bi bi-trash-fill"></i> Șterge
                        </button>
                    </form>
                </div>
            }
        </div>

        <div class="card-body px-4 pt-0 position-relative d-md-flex justify-content-between align-items-end">
            <div class="d-flex align-items-end" style="margin-top: -40px;">
                @if (!string.IsNullOrEmpty(Model.GroupPicture))
                {
                    <img src="@Model.GroupPicture" class="rounded-circle shadow border border-4 border-white me-3 flex-shrink-0"
                         style="width: 90px; height: 90px; object-fit: cover;">
                }
                else
                {
                    <div class="rounded-circle d-flex align-items-center justify-content-center bg-white shadow border border-4 border-white me-3 flex-shrink-0"
                         style="width: 90px; height: 90px; font-size: 2rem; color: #8e44ad; font-weight: bold;">
                        @(Model.Name.Length >= 2 ? Model.Name.Substring(0, 2).ToUpper() : Model.Name.Substring(0, 1).ToUpper())
                    </div>
                }

                <div class="mb-2">
                    <h3 class="fw-bold mb-0 text-dark">@Model.Name</h3>

                    <div class="d-flex flex-wrap align-items-center gap-3 text-muted small mt-1 mb-1">

                        <div class="d-flex align-items-center">
                            <i class="bi bi-person-badge me-1"></i> Admin:
                            <span class="fw-bold ms-1 text-dark">@(Model.Owner?.UserName ?? "Necunoscut")</span>
                        </div>

                        <div class="border-start border-secondary h-50 mx-1" style="opacity: 0.3;"></div>

                        <div class="d-flex align-items-center">
                            <i class="bi bi-calendar3 me-1"></i>
                            Creat: @Model.CreatedAt.ToLocalTime().ToString("dd MMM yyyy")
                        </div>
                    </div>

                    <small class="text-muted">
                        <i class="bi bi-people-fill"></i> @Model.Members.Count membri
                        &bull;
                        <i class="bi bi-chat-left-text-fill ms-1"></i> @(Model.Messages?.Count ?? 0) mesaje
                    </small>
                </div>
            </div>

            <div class="mt-3 mt-md-0 mb-2">
                @if (User.Identity.IsAuthenticated)
                {
                    @if (isMember)
                    {
                        <div class="dropdown">
                            <button class="btn btn-outline-success rounded-pill px-4 fw-bold dropdown-toggle" type="button" data-bs-toggle="dropdown">
                                <i class="bi bi-check-circle-fill me-1"></i> Membru
                            </button>
                            <ul class="dropdown-menu shadow border-0 rounded-4 mt-2">
                                <li>
                                    <form asp-action="Leave" asp-route-id="@Model.Id" method="post">
                                        <button type="submit" class="dropdown-item text-danger w-100 bg-transparent border-0">
                                            <i class="bi bi-box-arrow-right me-2"></i> Părăsește grupul
                                        </button>
                                    </form>
                                </li>
                            </ul>
                        </div>
                    }
                    else
                    {
                        <form asp-action="Join" asp-route-id="@Model.Id" method="post">
                            <button type="submit" class="btn text-white rounded-pill px-4 fw-bold shadow-sm"
                                    style="background: linear-gradient(90deg, #a18cd1 0%, #fbc2eb 100%); border: none;">
                                <i class="bi bi-plus-lg me-1"></i> Intră în Grup
                            </button>
                        </form>
                    }
                }
            </div>
        </div>
        <div class="px-4 pb-3">
            <p class="text-muted small mb-0">@Model.Description</p>
        </div>
    </div>

    <div class="row g-4">

        <div class="col-lg-8">
            <div class="card border-0 shadow-sm rounded-4 h-100" style="min-height: 500px;">
                <div class="card-header bg-white border-bottom py-3">
                    <h6 class="fw-bold mb-0" style="color: #6c5ce7;"><i class="bi bi-chat-dots-fill me-2"></i>Discuții Recente</h6>
                </div>

                <div class="card-body bg-light overflow-auto d-flex flex-column" style="max-height: 500px; scrollbar-width: thin;" id="chatContainer">
                    @if (Model.Messages != null && Model.Messages.Any())
                    {
                        @foreach (var msg in Model.Messages.OrderBy(m => m.SentAt))
                        {
                            bool isMe = msg.UserId == currentUserId;
                            bool canDelete = isMe || amIStaff;

                            <div class="d-flex mb-3 @(isMe ? "justify-content-end" : "justify-content-start")">

                                @if (!isMe)
                                {
                                    <div class="me-2 align-self-end">
                                        @if (!string.IsNullOrEmpty(msg.User.ProfilePicture))
                                        {
                                            <img src="@msg.User.ProfilePicture" class="rounded-circle border"
                                                 style="width: 30px; height: 30px; object-fit: cover;"
                                                 data-bs-toggle="tooltip" title="@msg.User.UserName">
                                        }
                                        else
                                        {
                                            <div class="rounded-circle bg-secondary text-white d-flex align-items-center justify-content-center"
                                                 style="width: 30px; height: 30px; font-size: 0.7rem;"
                                                 data-bs-toggle="tooltip" title="@msg.User.UserName">
                                                @msg.User.UserName.Substring(0, 2).ToUpper()
                                            </div>
                                        }
                                    </div>
                                }

                                <div class="d-flex flex-column @(isMe ? "align-items-end" : "align-items-start")" style="max-width: 75%;">
                                    @if (!isMe)
                                    {
                                        <small class="text-muted ms-1" style="font-size: 0.7rem;">
                                            @msg.User.UserName
                                            @{
                                                var authorMember = Model.Members.FirstOrDefault(m => m.UserId == msg.UserId);
                                                if (authorMember != null && authorMember.Role != MicroSocialPlatform.Models.GroupRole.Member)
                                                {
                                                    <span class="badge bg-warning text-dark" style="font-size: 0.5rem">MOD</span>
                                                }
                                            }
                                        </small>
                                    }

                                    <div class="p-3 shadow-sm text-break"
                                         style="border-radius: 15px;
                                                        border-bottom-@(isMe ? "right" : "left")-radius: 2px;
                                                        background: @(isMe ? "linear-gradient(135deg, #a18cd1, #fbc2eb)" : "#ffffff");
                                                        color: @(isMe ? "white" : "#212529");">
                                        @msg.Content
                                    </div>

                                    <div class="d-flex align-items-center mt-1 @(isMe ? "me-1" : "ms-1")">
                                        <small class="text-muted" style="font-size: 0.65rem;">
                                            @msg.SentAt.ToLocalTime().ToString("HH:mm")
                                        </small>
                                        @if (canDelete)
                                        {
                                            <form asp-action="DeleteMessage" method="post" class="ms-2">
                                                <input type="hidden" name="messageId" value="@msg.Id" />
                                                <button type="submit" class="btn btn-link p-0 text-danger opacity-50 hover-opacity-100 border-0"
                                                        style="font-size: 0.8rem; line-height: 1;" title="Șterge mesajul">
                                                    <i class="bi bi-trash-fill"></i>
                                                </button>
                                            </form>
                                        }
                                    </div>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="text-center my-auto opacity-50">
                            <i class="bi bi-chat-square-heart fs-1"></i>
                            <p class="mt-2">Fii primul care scrie un mesaj!</p>
                        </div>
                    }
                </div>

                <div class="card-footer bg-white border-top p-3">
                    @if (isMember)
                    {
                        <form id="chatForm" class="d-flex gap-2">
                            <input type="hidden" name="groupId" value="@Model.Id" />
                            <input type="text" name="content" id="messageInput" class="form-control rounded-pill bg-light border-0 px-3"
                                   placeholder="Scrie un mesaj..." autocomplete="off" required>
                            <button type="submit" class="btn btn-primary rounded-circle shadow-sm d-flex align-items-center justify-content-center"
                                    style="width: 40px; height: 40px; background: #8e44ad; border: none;">
                                <i class="bi bi-send-fill text-white fs-6"></i>
                            </button>
                        </form>
                    }
                    else
                    {
                        <div class="text-center text-muted small">
                            Trebuie să intri în grup pentru a trimite mesaje.
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card border-0 shadow-sm rounded-4">
                <div class="card-header bg-white border-0 py-3">
                    <h6 class="fw-bold mb-0">Membri (@Model.Members.Count)</h6>
                </div>

                <div class="card-body p-2">
                    <ul class="list-unstyled mb-0 pe-2" style="max-height: 500px; overflow-y: auto; scrollbar-width: thin;">

                        @foreach (var member in Model.Members.OrderBy(m => m.Role == MicroSocialPlatform.Models.GroupRole.Admin ? 0 : 1).ThenByDescending(m => m.JoinedAt))
                        {
                            <li class="d-flex align-items-center justify-content-between mb-3 p-2 rounded hover-bg-light">
                                <div class="d-flex align-items-center">
                                    <a href="#" class="text-decoration-none me-2"
                                       data-bs-toggle="tooltip"
                                       data-bs-placement="left"
                                       title="@member.User.UserName">

                                        @if (!string.IsNullOrEmpty(member.User.ProfilePicture))
                                        {
                                            <img src="@member.User.ProfilePicture" class="rounded-circle border"
                                                 style="width: 40px; height: 40px; object-fit: cover;">
                                        }
                                        else
                                        {
                                            <div class="rounded-circle bg-light d-flex align-items-center justify-content-center fw-bold text-secondary border"
                                                 style="width: 40px; height: 40px;">
                                                @member.User.UserName.Substring(0, 2).ToUpper()
                                            </div>
                                        }
                                    </a>

                                    <div class="overflow-hidden">
                                        <div class="d-flex align-items-center">
                                            <h6 class="mb-0 text-truncate text-dark me-2" style="font-size: 0.9rem; max-width: 100px;">@member.User.UserName</h6>
                                            @if (member.Role == MicroSocialPlatform.Models.GroupRole.Admin)
                                            {
                                                <i class="bi bi-star-fill text-warning" style="font-size: 0.7rem;" title="Admin"></i>
                                            }
                                            else if (member.Role == MicroSocialPlatform.Models.GroupRole.Moderator)
                                            {
                                                <i class="bi bi-shield-fill text-info" style="font-size: 0.7rem;" title="Moderator"></i>
                                            }
                                        </div>
                                        <small class="text-muted" style="font-size: 0.75rem;">
                                            @member.Role.ToString()
                                        </small>
                                    </div>
                                </div>

                                @if (amIStaff && member.UserId != currentUserId)
                                {
                                    <div class="d-flex gap-1">
                                        @if (isAdmin)
                                        {
                                            @if (member.Role == MicroSocialPlatform.Models.GroupRole.Member)
                                            {
                                                <form asp-action="Promote" method="post">
                                                    <input type="hidden" name="groupId" value="@Model.Id" />
                                                    <input type="hidden" name="userId" value="@member.UserId" />
                                                    <button type="submit" class="btn btn-sm btn-light text-success border-0" title="Promovează">
                                                        <i class="bi bi-arrow-up-circle-fill"></i>
                                                    </button>
                                                </form>
                                            }
                                            else if (member.Role == MicroSocialPlatform.Models.GroupRole.Moderator)
                                            {
                                                <form asp-action="Demote" method="post">
                                                    <input type="hidden" name="groupId" value="@Model.Id" />
                                                    <input type="hidden" name="userId" value="@member.UserId" />
                                                    <button type="submit" class="btn btn-sm btn-light text-warning border-0" title="Retrogradează">
                                                        <i class="bi bi-arrow-down-circle-fill"></i>
                                                    </button>
                                                </form>
                                            }
                                        }

                                        @{
                                            bool showKickButton = false;
                                            bool targetIsAdmin = member.Role == MicroSocialPlatform.Models.GroupRole.Admin;
                                            bool targetIsMod = member.Role == MicroSocialPlatform.Models.GroupRole.Moderator;
                                            bool targetIsMember = member.Role == MicroSocialPlatform.Models.GroupRole.Member;

                                            if (isAdmin)
                                            {
                                                showKickButton = true;
                                            }
                                            else if (amIStaff && !isAdmin)
                                            {
                                                if (targetIsMember) showKickButton = true;
                                                if (targetIsAdmin || targetIsMod) showKickButton = false;
                                            }
                                        }

                                        @if (showKickButton)
                                        {
                                            <form asp-action="Kick" method="post" onsubmit="return confirm('Ești sigur că vrei să dai afară acest membru?');">
                                                <input type="hidden" name="groupId" value="@Model.Id" />
                                                <input type="hidden" name="userId" value="@member.UserId" />
                                                <button type="submit" class="btn btn-sm btn-light text-danger border-0" title="Dă afară">
                                                    <i class="bi bi-x-circle-fill"></i>
                                                </button>
                                            </form>
                                        }
                                    </div>
                                }
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </div>

    </div>
</div>

@section Scripts {
    <script>
        // activeaza toate tooltips-urile de pe pagina
        var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
        var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
            return new bootstrap.Tooltip(tooltipTriggerEl)
        })

        // autoscroll la ultimul mesaj
        function scrollToBottom() {
            var chatContainer = document.getElementById('chatContainer');
            if (chatContainer) {
                chatContainer.scrollTop = chatContainer.scrollHeight;
            }
        }

        window.onload = scrollToBottom;

        const chatForm = document.getElementById('chatForm');
        const chatContainer = document.getElementById('chatContainer');
        const messageInput = document.getElementById('messageInput');

        if (chatForm) {
            chatForm.addEventListener('submit', function (e) {
                e.preventDefault(); // opresc refresh-ul paginii

                const formData = new FormData(chatForm);

                fetch('@Url.Action("PostMessage", "Groups")', {
                    method: 'POST',
                    body: formData,
                    headers: {
                        'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                    }
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        // golim inputul
                        messageInput.value = '';

                        // Construim html-ul mesajului 
                        const newMsgHtml = `
                            <div class="d-flex mb-3 justify-content-end">
                                <div class="d-flex flex-column align-items-end" style="max-width: 75%;">
                                    <div class="p-3 shadow-sm text-break"
                                         style="border-radius: 15px;
                                                border-bottom-right-radius: 2px;
                                                background: linear-gradient(135deg, #a18cd1, #fbc2eb);
                                                color: white;">
                                        ${data.content}
                                    </div>
                                    <div class="d-flex align-items-center mt-1 me-1">
                                        <small class="text-muted" style="font-size: 0.65rem;">
                                            ${data.time}
                                        </small>
                                        <form action="/Groups/DeleteMessage" method="post" class="ms-2">
                                            <input type="hidden" name="messageId" value="${data.messageId}" />
                                            <button type="submit" class="btn btn-link p-0 text-danger opacity-50 hover-opacity-100 border-0"
                                                    style="font-size: 0.8rem; line-height: 1;" title="Șterge mesajul">
                                                <i class="bi bi-trash-fill"></i>
                                            </button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        `;

                        // daca era mesajul "fii primul care scrie", il scoatem
                        if (chatContainer.querySelector('.text-center.my-auto')) {
                            chatContainer.innerHTML = '';
                            chatContainer.classList.remove('d-flex', 'flex-column'); // resetare layout gol
                        }

                        // adaugam mesajul la final
                        chatContainer.insertAdjacentHTML('beforeend', newMsgHtml);

                        // scroll jos
                        scrollToBottom();
                    } else {
                        alert('Eroare la trimiterea mesajului.');
                    }
                })
                .catch(error => console.error('Error:', error));
            });
        }
    </script>
}