@model MicroSocialPlatform.Models.ViewModels.GroupCreateViewModel

@{
    ViewData["Title"] = "Creează Grup Nou";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow border-0 rounded-4">
                <div class="card-body p-5">
                    <h2 class="text-center mb-4 fw-bold" style="color: #8e44ad;">Grup Nou</h2>

                    <form asp-action="Create" enctype="multipart/form-data">

                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="mb-3">
                            <label asp-for="Name" class="form-label fw-bold">Nume Grup</label>
                            <input asp-for="Name" class="form-control rounded-pill" placeholder="Ex: Programatori C#" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label fw-bold">Descriere</label>
                            <textarea asp-for="Description" class="form-control rounded-4" rows="3" placeholder="Despre ce este vorba în acest grup?"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="GroupPicture" class="form-label fw-bold">Poză Grup (Opțional)</label>
                            <input asp-for="GroupPicture" type="file" class="form-control rounded-pill" accept="image/*" />
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary rounded-pill fw-bold py-2" style="background-color: #8e44ad; border: none;">
                                Creează Grupul
                            </button>
                            <a asp-action="Index" class="btn btn-light rounded-pill text-muted">Renunță</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    .ls-1 {
        letter-spacing: 1px;
    }

    .form-control:focus {
        box-shadow: none;
        background-color: #fff !important;
        border-color: #a18cd1;
    }

    .input-group:focus-within .input-group-text {
        background-color: #fff !important;
        border-color: #a18cd1;
    }

    .input-group:focus-within .form-control {
        border-left: none;
    }
</style>