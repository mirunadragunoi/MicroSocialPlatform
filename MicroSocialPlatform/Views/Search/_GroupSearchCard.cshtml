@using Microsoft.AspNetCore.Identity
@model MicroSocialPlatform.Models.Group
@inject SignInManager<ApplicationUser> SignInManager

@{
    // preluam id-ul utilizatorului curent
    var currentUserId = ViewBag.CurrentUserId as string;

    // verificam statusul
    bool isMember = false;
    bool isOwner = false;

    if (currentUserId != null && Model.Members != null)
    {
        isMember = Model.Members.Any(m => m.UserId == currentUserId);
        isOwner = Model.OwnerId == currentUserId; 
    }
}

<div class="card border-0 shadow-sm rounded-4 overflow-hidden h-100 hover-card">

    <div style="height: 100px; background: linear-gradient(135deg, #a18cd1 0%, #fbc2eb 100%); position: relative;">

        <div class="position-absolute top-0 end-0 m-2 d-flex gap-1">
            @if (isOwner)
            {
                <span class="badge bg-warning text-dark shadow-sm">
                    <i class="bi bi-star-fill me-1"></i>Admin
                </span>
            }
            else if (isMember)
            {
                <span class="badge bg-success shadow-sm">
                    <i class="bi bi-check-circle-fill me-1"></i>Membru
                </span>
            }
        </div>

    </div>

    <div class="card-body text-center p-0">

        <div class="d-flex justify-content-center position-relative" style="margin-top: -50px;">
            <a asp-controller="Groups" asp-action="Details" asp-route-id="@Model.Id" class="text-decoration-none">
                @if (!string.IsNullOrEmpty(Model.GroupPicture))
                {
                    <img src="@Model.GroupPicture" class="rounded-circle shadow-sm border border-4 border-white"
                         style="width: 100px; height: 100px; object-fit: cover;">
                }
                else
                {
                    <div class="rounded-circle shadow-sm border border-4 border-white d-flex align-items-center justify-content-center fw-bold bg-white"
                         style="width: 100px; height: 100px; font-size: 2rem; color: #8e44ad;">
                        @(Model.Name.Length >= 2 ? Model.Name.Substring(0, 2).ToUpper() : Model.Name.Substring(0, 1).ToUpper())
                    </div>
                }
            </a>
        </div>

        <div class="p-4 pt-3">
            <h5 class="fw-bold text-dark mb-1 text-truncate">
                <a asp-controller="Groups" asp-action="Details" asp-route-id="@Model.Id" class="text-dark text-decoration-none">
                    @Model.Name
                </a>
            </h5>

            <div class="text-muted small mb-3">
                <i class="bi bi-person-badge"></i> Admin:
                <span class="fw-bold">@(Model.Owner?.UserName ?? "Necunoscut")</span>
            </div>

            <div class="mb-3">
                <span class="badge rounded-pill px-3 py-2" style="background-color: #f3e5f5; color: #8e44ad; font-weight: normal;">
                    <i class="bi bi-people-fill me-1"></i> @Model.Members.Count membri
                </span>
            </div>

            <div class="d-flex flex-column gap-2">

                @if (isOwner)
                {
                    <a asp-controller="Groups" asp-action="Details" asp-route-id="@Model.Id"
                       asp-route-returnUrl="@Context.Request.Path@Context.Request.QueryString"
                       class="btn btn-outline-primary rounded-pill w-100 fw-bold">
                        Vezi Grupul Meu
                    </a>
                }
                else if (isMember)
                {
                    <a asp-controller="Groups" asp-action="Details" asp-route-id="@Model.Id"
                       asp-route-returnUrl="@Context.Request.Path@Context.Request.QueryString"
                       class="btn btn-primary rounded-pill w-100 fw-bold bg-gradient border-0"
                       style="background-color: #8e44ad;">
                        Deschide
                    </a>

                    <form asp-controller="Groups" asp-action="Leave" asp-route-id="@Model.Id"
                          asp-route-returnUrl="@Context.Request.Path@Context.Request.QueryString"
                          method="post"
                          onsubmit="return confirm('Sigur vrei să părăsești acest grup?');">
                        <button type="submit" class="btn btn-sm btn-link text-danger text-decoration-none opacity-75 hover-opacity-100">
                            <i class="bi bi-box-arrow-right me-1"></i>Ieși din grup
                        </button>
                    </form>
                }
                else
                {
                    // vezi grup
                    <a asp-controller="Groups" asp-action="Details" asp-route-id="@Model.Id"
                       asp-route-returnUrl="@Context.Request.Path@Context.Request.QueryString"
                       class="btn btn-outline-primary rounded-pill w-100 fw-bold"
                       style="border-color: #8e44ad; color: #8e44ad;">
                        Vezi Grup
                    </a>

                    // intra in grup
                    @if (SignInManager.IsSignedIn(User))
                    {
                        // utilizator autentificat, link normal
                        <form asp-controller="Groups" asp-action="Join" asp-route-id="@Model.Id"
                              asp-route-returnUrl="@Context.Request.Path@Context.Request.QueryString"
                              method="post">
                            <button type="submit" class="btn btn-primary rounded-pill w-100 fw-bold bg-gradient border-0"
                                    style="background-color: #8e44ad;">
                                <i class="bi bi-plus-lg me-1"></i>Intră în Grup
                            </button>
                        </form>
                    }
                    else
                    {
                        // utilizator neautentificat, alerta
                        <button onclick="showAuthAlert()" class="btn btn-primary rounded-pill w-100 fw-bold bg-gradient border-0"
                                style="background-color: #8e44ad;">
                            <i class="bi bi-plus-circle-fill me-2"></i> Intră în Grup
                        </button>
                    }
                    /*
                    // intra in grup
                    <form asp-controller="Groups" asp-action="Join" asp-route-id="@Model.Id"
                          asp-route-returnUrl="@Context.Request.Path@Context.Request.QueryString"
                          method="post">
                        <button type="submit" class="btn btn-primary rounded-pill w-100 fw-bold bg-gradient border-0"
                                style="background-color: #8e44ad;">
                            <i class="bi bi-plus-lg me-1"></i>Intră în Grup
                        </button>
                    </form>*/
                }

            </div>
        </div>
    </div>
</div>

<style>
    .hover-card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .hover-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 20px rgba(0,0,0,0.1) !important;
    }

    .btn-outline-primary:hover {
        background-color: #8e44ad !important;
        border-color: #8e44ad !important;
        color: white !important;
    }
</style>